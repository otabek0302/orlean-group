# ----------------------------------------
# ✅ Force HTTPS (optional - comment out if no SSL)
# ----------------------------------------
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ----------------------------------------
# ✅ Redirect all non-existing files/folders to index.html
# This is critical for client-side routing (e.g. /about, /services)
# ----------------------------------------
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [QSA,L]

# ----------------------------------------
# ✅ Prevent Apache from misinterpreting clean URLs as .txt
# like /about → /about.txt
# ----------------------------------------
<FilesMatch "\.(txt|xml|json)$">
  ForceType text/html
</FilesMatch>

# ----------------------------------------
# ✅ Optional: Caching static assets (speed boost)
# ----------------------------------------
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 1 hour"
  ExpiresByType image/jpg "access plus 1 month"
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/webp "access plus 1 month"
  ExpiresByType text/css "access plus 1 week"
  ExpiresByType application/javascript "access plus 1 week"
</IfModule>